<header id="header" class="relative w-full px-6 py-5 z-50 shadow-md" 
        style="background-image: url('{{ site.cover_image }}'); background-size: cover; background-position: center; min-height: 500px;">
    
    <!-- Gradient Overlay -->
    <div class="absolute inset-0 bg-gradient-to-b from-black/70 to-transparent"></div>

    <!-- Centered Ultiblocks Title with Subtitle -->
    <div class="relative flex flex-col items-center justify-center text-center text-6xl font-extrabold" style="min-height: 400px;">
        <span class="text-emerald-400 drop-shadow-lg">Ultiblocks</span>
        <span class="text-gray-300 text-xl font-medium mt-2">Modular Electronics Ecosystem</span>
    </div>

    <!-- Navigation Menu (Positioned at the top) -->
    <div class="relative max-w-5xl mx-auto flex items-center justify-end">
        <nav id="menu" class="items-center flex-grow w-full md:w-auto md:flex mt-2 md:mt-0">
            {% for item in menu %}
            <a href="{{ item.url | url }}" {% if item.newTab %}target="_blank" rel="noopener" {% endif %}
               class="block mt-4 md:inline-block md:mt-0 font-medium text-slate-700 hover:text-teal-600 text-base mr-4">
                {{ item.label }}
            </a>
            {% endfor %}
        </nav>
    </div>
</header>
